{% extends "./layouts/app.twig" %}
{% block title %}
	Profile
{% endblock %}
{% block navbar %}{% endblock %}
{% block content %}
	<a href="/">Go home</a>

	<h2>{{ user.displayName }}</h2>
	<h4>{{ user.username }}</h4>
	<p>{{ user.email }}</p>
	<img src="{{ user.profilePicture }}" alt="pfp" height="50px">
	<table>
		<tbody>
			<tr>
				<th>Registered at</th>
				<td>{{ user.registeredAt }}</td>
			</tr>
			<tr>
				<th>Biography</th>
				<td>{{ user.bio }}</td>
			</tr>
		</tbody>
	</table>

	<div>
		<form method="post" action="theme">
			<label for="theme">Theme</label>
			<select name="theme" required>
				<option value="{{currentTheme}}" selected hidden>{{currentTheme}}</option>
				{% for theme in highlightJSData.themes %}
					<option value="{{ theme }}">{{ theme }}</option>
				{% endfor %}
			</select>
			<input type="submit" value="Change theme"/>
		</div>

		<ul>
			<li>
				<a href="/user/change">Change password</a>
			</li>
			<li>
				<a href="/profile/edit">Edit profile</a>
			</li>
			<li>
				<a href="/">Back</a>
			</li>
		</ul>
		{% for post in posts|reverse %}
			<img src="/img/placeholder.png" alt="code img" height="100px" class="post-image" postid="{{ post.id }}">
		{% endfor %}
	{% endblock %}
