{% extends "./layouts/app.twig" %}
{% block title %}
	Profile
{% endblock %}
{% block navbar %}
{% endblock %}
{% block content %}
<h2>{{ user.displayName }}</h2>
<h4>{{ user.username }}</h4>
<p>{{ user.email }}</p>
<img src="{{ user.profilePicture }}" alt="pfp" height="50px">
<table>
    <tbody>
        <tr>
            <th>Registered at</th>
            <td>{{ user.registeredAt }}</td>
        </tr>
        <tr>
            <th>Biography</th>
            <td>{{ user.bio }}</td>
        </tr>
    </tbody>
</table>
<ul>
    <li><a href="/user/change">Change password</a></li>
    <li><a href="/profile/edit">Edit profile</a></li>
    <li><a href="/">Back</a></li>
</ul>
{% endblock %}
