{% extends "./layouts/app.twig" %}
{% block title %}
    Error {{ errorNumber }}
{% endblock %}
{% block navbar %}
{% endblock %}
{% block content %}
<main class="min-h-screen bg-gray-200 flex flex-col items-center justify-center px-4 sm:px-6 lg:px-8">
        <div class="rounded-lg border bg-neutral-100 text-card-foreground shadow-sm max-w-md w-full space-y-8"
            data-v0-t="card">
            <div class="flex flex-col space-y-1.5 p-6">
                <h1 class="text-center mt-8 text-2xl font-bold">Binsta</h1>
                <h2 class="mt-6 text-center text-3xl font-extrabold text-neutral-900">
                    Oops, something went wrong!
                </h2>
            </div>
            <div class="p-6">
                <div role="alert"
                    class="relative w-full rounded-lg border p-4">
                    <ion-icon name="warning-outline" class="absolute"></ion-icon>
                    <h5 class="mb-1 font-medium leading-none tracking-tight ml-6">Error Code: {{ errorNumber }}</h5>
                    <div class="text-sm [&amp;_p]:leading-relaxed">
                        {{ errorMessage }}
                    </div>
                </div>
                <div class="mt-6 grid"><a href="/"
                        class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-input bg-neutral-200 hover:bg-neutral-300 h-10 px-4 py-2">
                        Go Home
                    </a></div>
            </div>
        </div>
    </main>
{% endblock %}