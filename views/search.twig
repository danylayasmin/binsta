{% extends "./layouts/app.twig" %}
{% block title %}
    Search Results
{% endblock %}
{% block content %}
    <h1>Search results</h1>

    {% if users is empty %}
        <p>No users found</p>
    {% else %}
        <ul>
            {% for user in users %}
                <li><a href="/profile/show?id={{ user.id }}">{{ user.username }}</a></li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}